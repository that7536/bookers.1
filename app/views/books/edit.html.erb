<h1>Editing Book</h1>
<div class=book-edit>
  <% if @book.errors.any? %>
    <div class="error-explanation">
      <h2 class="error-message"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul class="error-text">
        <% @book.errors.full_messages.each do |message|%>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field:title %>
    </div>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_area:body %>
    </div>
    <div class=action><%= f.submit 'Update Book' %></div>
  <% end %>
</div>

<%= link_to "Show", book_path(@book.id) %>
