
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td><!--↓idが必要な時でも、ここの()内のidを省略しても良い。-->
        <td><%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<div class="book-new">
  <% if @book.errors.any? %>
    <div class="error-explanation">
      <h2 class="error-message"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul class="error-text">
        <% @book.errors.full_messages.each do |message|%>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model: @book, url:'/books', local:true do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field:title %>
    </div>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_area:body %>
    </div>
    <div class="action"><%= f.submit 'Create Book' %></div>
  <% end %>
</div>